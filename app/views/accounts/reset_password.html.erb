<div id="main" class="main" data-src="<%= image_path('pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div class="passport">
        <div class="title">
          忘记密码
        </div>
        <%= simple_form_for(@reset_password, url: reset_password_post_accounts_path, method: :post) do |f| %>
            <div class="passport-box">
              <div class="passport-sub-box">
                <i class="glyphicon glyphicon-lock"></i>
                <input class="input-robodou" id="forget-new-password" type="password" name="reset_password[password]"
                       placeholder="请输入6-20位新密码">
              </div>
              <div class="passport-sub-box rucaptcha-special">
                <i class="glyphicon glyphicon-check"></i>
                <%= rucaptcha_input_tag(class: 'rucaptcha-input-sepcial input-robodou', placeholder: '请输入校验码') %>
                <span class="refresh-captcha">
                  <%= rucaptcha_image_tag(alt: '校验码', id: 'rucaptcha-image-style') %>
                </span>
              </div>
              <div class="passport-sub-box rucaptcha-special">
                <i class="glyphicon glyphicon-phone"></i>
                <input class="input-robodou" id="reset-password_mobile" type="tel" name="reset_password[mobile]"
                       placeholder="请输入手机号码">
                <span class="send-code-special" id="btn_send_mobile_code" data-key="reset-password" data-type="RESET_PASSWORD">发送验证码</span>
              </div>

              <div class="passport-sub-box">
                <i class="glyphicon glyphicon-comment"></i>
                <input class="input-robodou" id="forget-mobile-code" type="text" name="reset_password[mobile_code]"
                       placeholder="请输入验证码">
              </div>
            </div>
            <div class="other-link">
              <a class="forget-email" href="/account/password/new">邮箱找回</a>
            </div>

            <button class="btn-robodou btn-forget-submit" type="submit">重置密码</button>
        <% end %>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>
