<div id="main" class="main" data-src="<%= image_path('pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div class="passport">
        <div class="title">
          用户登录
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="passport-box">
              <div class="passport-sub-box">
                <i class="glyphicon glyphicon-user"></i>
                <input class="input-robodou" id="login-username" type="text" name="user[login]" value="<%= resource.login %>"
                       placeholder="请输入用户名/邮箱/手机">
              </div>
              <div class="passport-sub-box">
                <i class="glyphicon glyphicon-lock"></i>
                <input class="input-robodou" id="login-password" type="password" name="user[password]"
                       placeholder="请输入密码">
              </div>
              <input type="hidden" name="user[return_url]" value="<%= params[:return_url] %>">
            </div>

            <div class="other-link">
              <a class="register-link" href="<%= new_user_registration_path %>">注册账号</a>
              <a class="forget-link" href="<%= new_password_path(resource_name) %>">忘记密码</a>
            </div>

            <button class="btn-robodou btn-login-submit" type="submit">登录</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

