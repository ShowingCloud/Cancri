<div class="container">
  <h1 class="page-header">
    用户登录
  </h1>

  <div class="row">
    <div class="col-md-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%= f.input :login, placeholder: '请输入昵称' %>
          <%= f.input :password, placeholder: '请输入密码' %>
          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %> 记住我
              </div>
          <% end -%>

          <div class="actions form-group form-group-lg">
            <%= f.submit class: 'btn btn-primary btn-block', value: '立即登录' %>
          </div>
      <% end %>

      <p class="clearfix text-right">
        <a href="<%= new_user_registration_path %>">注册</a>
        <br>
        <a href="<%= new_password_path(resource_name) %>">忘记密码?</a>
      </p>
    </div>
  </div>
</div>