<div id="main" class="main" data-src="<%= image_path('homepage/register-pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div id="register">
        <div class="register-inner" data-src="<%= image_path('homepage/register-bk.png') %>">
          <div class="sec-t">
            注册我的robodou
          </div>
          <div class="sec-c">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <label class="input-row">
                  用户名
                  <input type="text" name="user[nickname]" value="<%= resource.nickname %>"/>
                  <% if request.post? && devise_error_messages! %>
                      <span class="tips"><%= resource.errors[:nickname].each.first %></span>
                  <% end %>
                </label>
                <label class="input-row">
                  密码
                  <input type="password" name="user[password]" value=""/>
                  <% if request.post? && devise_error_messages! %>
                      <span class="tips"><%= resource.errors[:password].each.first %></span>
                  <% end %>
                </label>
                <label class="input-row">
                  确认密码
                  <input type="password" name="user[password_confirmation]" value=""/>
                  <% if request.post? && devise_error_messages! %>
                      <% resource.errors[:password_confirmation].each do |msg| %>
                          <span class="tips"><%= msg %></span>
                      <% end %>
                  <% end %>
                </label>
                <label class="input-row">
                  验证码
                  <a class="refresh-captcha" href="#">
                    <%= rucaptcha_image_tag(title: '点击刷新验证码') %>
                  </a>
                  <%= rucaptcha_input_tag %>
                  <% if request.post? && !verify_rucaptcha?(resource) %>
                      <span class="tips">验证码不正确</span>
                  <% end %>
                </label>
                <label class="text-center">
                  <input class="btn-robodou btn-robodou-register" data-src="<%= image_path('homepage/btn-register-bk.png') %>" type="submit" value="注册"/>
                </label>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>

