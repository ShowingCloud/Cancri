<div id="main" class="main" data-src="<%= image_path('pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div class="passport">
        <div class="title">
          用户注册
        </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="passport-box">
              <div class="passport-sub-box">
                <i class="glyphicon glyphicon-user"></i>
                <input class="input-robodou" id="register-username" type="text" name="user[nickname]"
                       placeholder="请输入用户名">
              </div>
              <div class="passport-sub-box">
                <i class="glyphicon glyphicon-envelope"></i>
                <input class="input-robodou" id="register-password" type="email" name="user[email]"
                       placeholder="请输入邮箱">
              </div>
              <div class="passport-sub-box">
                <i class="glyphicon glyphicon-lock"></i>
                <input class="input-robodou" id="register-password-repeat" type="password" name="user[password]"
                       placeholder="请输入密码(6-20位)">
              </div>
              <div class="passport-sub-box">
                <i class="glyphicon glyphicon-lock"></i>
                <input class="input-robodou" id="register-password-repeat" type="password" name="user[password_confirmation]"
                       placeholder="请重复输入密码">
              </div>
            </div>

            <div class="other-link">
              <a class="login-link pull-left" href="<%= new_user_session_path %>">已有账号,去登录</a>
              <a class="mobile-link pull-right" href="/accounts/register">手机注册</a>
              <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
                  <%= link_to '没收到激活邮件？', new_confirmation_path(resource_name) %><br/>
              <% end -%>
            </div>

            <button class="btn-robodou btn-register-submit" type="submit">注册账号</button>
        <% end %>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>


