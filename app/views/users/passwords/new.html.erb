<div class="container">
  <h1 class="page-header">
    忘记密码
  </h1>

  <div class="row">
    <div class="col-md-4">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>

          <%= f.input :email, placeholder: '请输入邮箱' %>

          <div class="actions form-group form-group-lg">
            <%= f.submit class: 'btn btn-danger btn-block', value: '发送重置密码邮件' %>
          </div>
      <% end %>

      <p class="clearfix text-right">
        <a href="<%= new_user_registration_path %>">没有账号? 注册</a>
        <br>
        <a href="<%= new_user_session_path %>"> 想起密码? 登录</a>
      </p>
    </div>
  </div>
</div>

