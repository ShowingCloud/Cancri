<div id="main" class="main" data-src="<%= image_path('homepage/register-pagebk.png') %>">
  <div class="container">
    <div class="reset-pwd-email">
      <div class="sec-t">
        重置密码
      </div>
      <div class="email-type sec-c">
        <div class="row ">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
              <%= f.input :email, placeholder: '请输入邮箱' %>
              <div class="<%= "form-group string #{request.post? && !verify_rucaptcha?(resource) ? 'has-error' : ''}" %>">
                <label class="string  control-label">
                  验证码
                </label>
                <%= rucaptcha_input_tag(class: 'form-control', placeholder: '请输入验证码') %>
                <% if request.post? && !verify_rucaptcha?(resource) %>
                    <span class="help-block">验证码不正确</span>
                <% end %>
              </div>
              <div class="form-group">
                <a class="refresh-captcha" href="#">
                  <%= rucaptcha_image_tag(alt: 'rucaptcha') %>
                </a>
              </div>
              <div class="actions form-group form-group-lg">
                <%= f.submit class: 'btn btn-danger btn-block', value: '发送重置密码邮件', 'data-disable-with' => '发送重置密码邮件' %>
              </div>
          <% end %>
          <p class="clearfix text-right">
            <a href="<%= new_user_registration_path %>">没有账号? 注册</a>
            <br>
            <a href="<%= new_user_session_path %>"> 想起密码? 登录</a>
          </p>
        </div>
        <div style="cursor: pointer">
          <a class="exchange-mobile" href="<%= reset_password_accounts_path %>">使用手机找回</a>
        </div>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>
