<div class="container">
  <h2 class="page-header">
    重置密码
  </h2>

  <div class="row">
    <div class="col-md-4 col-sm-6">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
          <%= devise_error_messages! %>

          <div class="field form-group">
            <label for="user_email" class="control-label">邮箱:</label><br/>
            <%= f.email_field :email, autofocus: true, placeholder: '请输入邮箱', class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit class: 'btn btn-primary btn-block', value: '发送重置邮件' %>
          </div>
      <% end %>

    </div>
  </div>

</div>




