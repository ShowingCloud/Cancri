<div class="container">
  <h2>重置密码</h2>

  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
          <% if resource.errors.full_messages.to_s.include? 'Reset' %>
              <div id="error_explanation">
                <span style="color: darkred">该重置密码token是无效的,如需重置请重新发送修改密码邮箱链接</span>
              </div>
          <% end %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">

            <%= f.input :password, autofocus: true, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.input :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit '重置密码', class: 'btn btn-danger btn-block' %>
          </div>
      <% end %>

    </div>
  </div>
</div>
