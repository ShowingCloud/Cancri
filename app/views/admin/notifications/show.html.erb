<h1 class="page-header">
  显示<%= t('activerecord.models.notification') %>
  <small class="pull-right">
    <a href="<%= new_admin_notification_path %>" title="新增<%= t('activerecord.models.notification') %>" class="btn btn-default">
      <i class="icon-plus icon-only"></i></a>
    <a href="<%= edit_admin_notification_path(@notification) %>" title="编辑该<%= t('activerecord.models.notification') %>" class="btn btn-default">
      <i class="icon-edit icon-only"></i></a>
    <a href="<%= admin_notifications_path %>" title="列表<%= t('activerecord.models.notification') %>" class="btn btn-default">
      <i class="icon-list icon-only"></i></a>
  </small>
</h1>

<% if notice %>
    <div class="alert alert-success"><%= notice %>
      <button class="close" data-dismiss="alert">
        <i class="icon-remove"></i>
      </button>
    </div>
<% end %>
<div class="panel panel-info">
  <div class="panel-heading">
    <%= t('activerecord.models.notification') %>
  </div>
  <ul class="list-group">
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.content') %>:</h4>
      <%= @notification.content %>
    </li>
  </ul>
</div>