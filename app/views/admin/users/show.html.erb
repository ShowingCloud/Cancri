<h1 class="page-header">
  显示 <%= t('activerecord.models.user') %>
  <small class="pull-right">
    <%= link_to '编辑', edit_admin_user_path(@user) %> |
    <%= link_to '列表', admin_users_path %>
  </small>
</h1>

<% if notice %>
    <div class="alert alert-success"><%= notice %></div>
<% end %>


<div class="panel panel-info">
  <div class="panel-heading">
    <%= t('activerecord.models.user') %>
  </div>
  <ul class="list-group">
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.nickname') %>:</h4>

      <p><%= @user.nickname %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.mobile') %>:</h4>

      <p><%= @user.mobile %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.email') %>:</h4>

      <p><%= @user.email %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.username') %>:</h4>

      <p><%= @user.username %></p>
    </li>
  </ul>
</div>
