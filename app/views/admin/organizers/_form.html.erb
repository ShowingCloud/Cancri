<div class="panel panel-info">
  <div class="panel-heading"><%= t('activerecord.models.organizer') %></div>
  <div class="panel-body">
    <%= simple_form_for([:admin, @organizer]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <% if params[:action]=='new' %>
              <%= f.input :name, autofocus: true %>
          <% else %>
              <%= f.input :name %>
          <% end %>
          <%= f.input :category, collection: Organizer::CATEGORY.map { |key, val| [t('category.'+key.to_s), val] } %>
          <%= f.input :responsible %>
          <%= f.input :tel %>
          <%= f.input :address %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>