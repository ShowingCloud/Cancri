<h1 class="page-header">
  <%= @competition.name %>
  <small class="pull-right">
    <a href="<%= edit_admin_competition_path(@competition) %>" title="编辑比赛" class="btn btn-default">
      <i class="icon-edit icon-only"></i></a>
    <a href="<%= admin_competitions_path %>" title="比赛列表" class="btn btn-default">
      <i class="icon-list icon-only"></i></a>
  </small>
</h1>




<% if notice %>
    <div class="alert alert-success"><%= notice %>
      <button class="close" data-dismiss="alert">
        <i class="icon-remove"></i>
      </button>
    </div>
<% end %>
<div class="panel panel-info">
  <div class="panel-heading">
    <%= t('activerecord.models.competition') %>
  </div>
  <ul class="list-group">
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.name') %>:</h4>

      <p><%= @competition.name %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.aim') %>:</h4>

      <p><%= @competition.aim %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.date_schedule') %>:</h4>

      <p><%= @competition.date_schedule %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.organizing_committee') %>:</h4>

      <p><%= @competition.organizing_committee %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.apply_method') %>:</h4>

      <p><%= @competition.apply_method %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.apply_require') %>:</h4>

      <p><%= @competition.apply_require %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.reward_method') %>:</h4>

      <p><%= @competition.reward_method %></p>
    </li>
    <li class="list-group-item">
      <h4>封面:</h4>

      <p><%= image_tag(@competition.cover_url(:middle)) %></p>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.description') %>:</h4>

      <p><%= @competition.description %></p>
    </li>
    <li class="list-group-item">
      <h4><%= '报名起始时间' %>:</h4>

      <p><%= @competition.apply_start_time.try(:strftime, '%Y-%m-%d %H:%M') %>
        － <%= @competition.apply_end_time.try(:strftime, '%Y-%m-%d %H:%M') %></p>
    </li>

    <li class="list-group-item">
      <h4>学校审核截止时间:</h4>

      <p><%= @competition.school_audit_time.try(:strftime, '%Y-%m-%d %H:%M') %></p>
    </li>
    <li class="list-group-item">
      <h4>区县审核截止时间:</h4>

      <p><%= @competition.district_audit_time.try(:strftime, '%Y-%m-%d %H:%M') %></p>
    </li>

    <li class="list-group-item">
      <h4>比赛起始时间:</h4>

      <p><%= @competition.start_time.try(:strftime, '%Y-%m-%d %H:%M') %>
        － <%= @competition.end_time.try(:strftime, '%Y-%m-%d %H:%M') %></p>
    </li>

    <% if @competition.time_schedule.present? %>
        <li class="list-group-item">
          <a href="<%= @competition.time_schedule %>" target="_blank">查看时间安排</a>
        </li>
    <% end %>

    <% if @competition.detail_rule.present? %>
        <li class="list-group-item">
          <a href="<%= @competition.detail_rule %>" target="_blank">查看详细规则</a>
        </li>
    <% end %>

  </ul>
</div>