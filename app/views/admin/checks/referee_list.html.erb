<h1 class="page-header">
  裁判列表
  <small class="pull-right">
    <a href="/admin/checks/referees" class="btn btn-default" title="待审核裁判">
      待审核裁判</a>
  </small>
</h1>
<table class="table table-bordered table-hover table-striped">
  <thead>
  <tr>
    <th>姓名</th>
    <th>性别</th>
    <th>比赛</th>
    <th>学校</th>
    <th>手机</th>
  </tr>
  </thead>
  <tbody>
  <% @referees.each do |th| %>
      <tr>
        <td><%= th[:username] %></td>
        <td><%= th[:gender] == 1 ? '男' : '女' %></td>
        <td>
          <%= th[:name] %>
        </td>
        <td><%= th[:school] %></td>
        <td><%= th[:mobile] %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<nav>
  <%= paginate @referees %>
</nav>