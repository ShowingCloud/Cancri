<h1 class="page-header">
  <%= @competition.name %>--<%= t('activerecord.models.demeanor') %>列表 (视频)
  <small class="pull-right">
    <a href="<%= "#{admin_photos_path}?cod=#{@competition.id}" %>" class="btn btn-default" title="图片列表">
      图片列表</a>
    <a href="<%= "#{new_admin_video_path}?cod=#{@competition.id}" %>" class="btn btn-default" title="添加<%= t('activerecord.models.demeanor') %>">
      <i class="icon-only icon-plus"></i></a>
  </small>
</h1>

<table class="table table-bordered table-hover table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th><%= '路径' %></th>
    <th>操作</th>
  </tr>
  </thead>

  <tbody>
  <% @videos.each do |video| %>
      <tr>
        <td><%= video.id %></td>
        <td><%= video.video %></td>
        <td><%= link_to [:admin, video], title: '查看', class: 'btn btn-xs btn-warn' do %>
              <i class="icon-eye-open bigger-120"></i>
          <% end %>
          <%= link_to edit_admin_video_path(video), title: '编辑', class: 'btn btn-xs btn-info' do %>
              <i class="icon-edit bigger-120"></i>
          <% end %>
          <%= link_to "#{admin_video_path(video)}?cod=#{video.competition_id}", method: :delete, data: {confirm: '确认删除吗?'}, title: '删除', class: 'btn btn-xs btn-danger' do %>
              <i class="icon-trash bigger-120"></i>
          <% end %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<nav>
  <%= paginate @videos %>
</nav>
