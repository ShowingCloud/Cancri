<div class="panel panel-info">
  <div class="panel-heading"><%= t('activerecord.models.demeanor') %></div>
  <div class="panel-body">
    <%= simple_form_for([:admin, @video]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :sort %>
          <%= f.input :status, label: '显示' %>
          <%= f.hidden_field :competition_id, value: params[:cod].present? ? params[:cod] : @video.competition_id %>
          <% if @video.present? %>
              <video src="<%= @video.video_url %>" controls="controls" width="300px" height="220px">
                您的浏览器不支持 video 标签。
              </video>
          <% end %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>

