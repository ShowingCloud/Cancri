<h1 class="page-header">
  项目
  <small class="pull-right">
    <a href="<%= new_admin_event_volunteer_path %>" title="创建<%= t('activerecord.models.volunteer') %>招募" class="btn btn-default">
      创建招募</a>
    <a href="<%= admin_volunteers_path %>" title="显示<%= t('activerecord.models.volunteer') %>" class="btn btn-default">
      志愿者列表</a>
  </small>
</h1>

<% if @event_volunteers.present? %>
    <table class="table table-bordered table-hover table-striped">
      <thead>
      <tr>
        <th>时间</th>
        <th>活动</th>
        <th>操作</th>

      </tr>
      </thead>

      <tbody>
      <% @event_volunteers.each do |event_volunteer| %>
          <tr>
            <% event_obj = event_volunteer.send("#{event_volunteer.event_type.downcase}") %>
            <td><%= event_obj.start_time.strftime('%Y-%m-%d') %></td>
            <td><%= event_obj.name %></td>

            <td><%= %></td>

          </tr>
      <% end %>
      </tbody>
    </table>
    <nav>
      <%= paginate @event_volunteers %>
    </nav>
<% else %>
    <div class="alert alert-success">
      暂无志愿者项目
    </div>
<% end %>