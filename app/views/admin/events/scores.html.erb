<h1 class="page-header">
  <%= @event.name %> 成绩排名 <%= "#{params[:group]}组" if params[:group].present? %>
  <input type="hidden" class="event-id" value="<%= @event.id %>"/>
  <small class="pull-right">
    <a href="#" role="button" title="" class="open-add-team btn btn-default" data-toggle="modal">
      <i class="icon-plus icon-only"></i></a>
  </small>
  <input type="hidden" class="event-id" value="<%= @event.id %>">
  <div class="col-xs-12 col-sm-2 form-group pull-right" style="margin-top: 6px">
    <select id="team-score-group" class="form-control">
      <option value="">
        &nbsp;所有组别
      </option>
      <option <%= 'selected' if params[:group] == '小学' %> value="小学">
        小学
      </option>
      <option <%= 'selected' if params[:group] == '中学' %> value="中学">
        中学
      </option>
      <option <%= 'selected' if params[:group] == '初中' %> value="初中">
        初中
      </option>
      <option <%= 'selected' if params[:group] == '高中' %> value="高中">
        高中
      </option>
    </select>
  </div>
</h1>

<div class="row">
  <div class="col-xs-12">
    <% if @scores.present? %>
        <table class="table table-bordered table-hover table-striped">
          <thead>
          <tr>
            <th>编号</th>
            <th>队长</th>
            <th>成绩属性</th>
            <th>最终成绩</th>
            <th>排名</th>
            <th>操作</th>
          </tr>
          </thead>

          <tbody>
          <% @scores.each_with_index do |score, index| %>
              <tr>
                <td><%= score.identifier %></td>
                <td><%= score.username %></td>
                <td><%= (score.score_attribute).force_encoding 'utf-8' if score.score_attribute %></td>
                <td><%= score.score %></td>
                <td></td>
                <td>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>


    <% else %>
        <div class="alert alert-info">暂无队伍有成绩</div>
    <% end %>


  </div>
</div>

