<div class="panel panel-info">
  <div class="panel-heading"><%= t('activerecord.models.score_attribute') %></div>
  <div class="panel-body">
    <%= simple_form_for([:admin, @score_attribute]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :write_type, collection: ScoreAttribute::WRITE_TYPE.map { |key, val| [t('write_type.'+key.to_s), val] } %>
          <%= f.input :desc, label: '数值类型:', collection: ScoreAttribute::VALUE_TYPE.map { |key, val| [t('value_type.'+key.to_s), val] } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>