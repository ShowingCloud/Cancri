<h1 class="page-header">
  显示<%= t('activerecord.models.position') %>
  <small class="pull-right">
    <a href="<%= new_admin_position_path %>" title="新增<%= t('activerecord.models.position') %>" class="btn btn-default">
      <i class="icon-plus icon-only"></i></a>
    <a href="<%= edit_admin_position_path(@position) %>" title="编辑该<%= t('activerecord.models.position') %>" class="btn btn-default">
      <i class="icon-edit icon-only"></i></a>
    <a href="<%= admin_positions_path %>" title="列表<%= t('activerecord.models.position') %>" class="btn btn-default">
      <i class="icon-list icon-only"></i></a>
  </small>
</h1>

<% if notice %>
    <div class="alert alert-success"><%= notice %>
      <button class="close" data-dismiss="alert">
        <i class="icon-remove"></i>
      </button>
    </div>
<% end %>
<div class="panel panel-info">
  <div class="panel-heading">
    <%= t('activerecord.models.position') %>
  </div>
  <ul class="list-group">
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.name') %>:</h4>
      <%= @position.name %>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.sort') %>:</h4>
      <%= @position.sort %>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.status') %>:</h4>
      <%= @position.status ? '显示' : '不显示' %>
    </li>
    <li class="list-group-item">
      <h4><%= t('simple_form.labels.defaults.desc') %>:</h4>
      <%= @position.desc %>
    </li>
  </ul>
</div>