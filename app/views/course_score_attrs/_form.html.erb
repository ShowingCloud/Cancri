<%= simple_form_for(@course_score_attr, url: '/course_score_attrs', method: :post, remote: true) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :name, maxlength: 15 %>
      </div>
      <div class="col-xs-6">
        <div class="form-inputs">
          <%= f.input :score_per, label: '分数' %>
          <%= f.hidden_field :course_id, value: params[:cd].present? ? params[:cd] : @course_score_attr.course_id %>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary', value: '提交', 'data-disable-with' => '提交' %>
    </div>
<% end %>

