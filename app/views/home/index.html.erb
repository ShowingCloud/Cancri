<div id="main" class="main" data-src="<%= image_path('pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div class="col-sm-9">
        <div id="banner">
          <div class="carousel slider" id="banner-slider" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#banner-slider" data-slide-to="0" class="active"></li>
              <% if cookies[:area]!='1' %>
                  <li data-target="#banner-slider" data-slide-to="1" class=""></li>
              <% end %>
            </ol>
            <div class="carousel-inner" role="listbox">
              <% if cookies[:area]=='1' %>
                  <div class="item active">
                    <img src="<%= image_path('banner02.jpg') %>" alt="...">
                  </div>
                  <div class="item">
                    <img src="<%= image_path('banner03.png') %>" alt="...">
                  </div>
              <% else %>
                  <div class="item active">
                    <a href="/competitions"><img src="<%= image_path('banner06.jpg') %>" alt="..."></a>
                  </div>
                  <div class="item">
                    <a href="/competitions"><img src="<%= image_path('banner05.jpg') %>" alt="..."></a>
                  </div>
              <% end %>
            </div>
            <a class="left carousel-control" href="#banner-slider" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#banner-slider" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="banner-info">

        </div>

        <div id="board" class="board-inner">
          <div class="row">
            <div class="col-sm-4">
              <a href="">
                <div class="board-item" data-src="<%= image_path('board-bk.png') %>">
                  <div class="sec-t">
                    个人积分
                  </div>
                  <div class="sec-c">
                    敬请期待
                  </div>
                </div>
              </a>
            </div>
            <div class="col-sm-4">
              <a href="">
                <div class="board-item" data-src="<%= image_path('board-bk.png') %>">
                  <div class="sec-t">
                    学校积分
                  </div>
                  <div class="sec-c">
                    敬请期待
                  </div>
                </div>
              </a>
            </div>
            <div class="col-sm-4">
              <a href="">
                <div class="board-item" data-src="<%= image_path('board-bk.png') %>">
                  <div class="sec-t">
                    老师积分
                  </div>
                  <div class="sec-c">
                    敬请期待
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div id="home-sidebar">
          <div class="s-top">
            近期比赛&活动
          </div>
          <div class="s-middle">
            <% if @competition.present? %>
                <% @competition.each do |c| %>
                    <a href="/competitions/<%= c.id %>">
                      <div class="s-item">
                        <div class="s-item-img">
                          <img src="<%= image_path(c.cover) %>" alt=""/>
                        </div>
                        <div class="s-item-dec">
                          <%= c.name %>
                        </div>
                      </div>
                    </a>
                <% end %>
            <% end %>
            <% if @activity.present? %>
                <a href="/activities/<%= @activity.id %>">
                  <div class="s-item">
                    <div class="s-item-img">
                      <img src="<%= image_path(@activity.cover) %>" alt=""/>
                    </div>
                    <div class="s-item-dec">
                      <%= @activity.name %>
                    </div>
                  </div>
                </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
