<div class="container">
  <h1>Home#index</h1>

  <p>Find me in app/views/home/index.html.erb</p>

  <br><br>
  <% if current_user %>
      <%= form_tag "/notifications", method: 'post', remote: true do %>
          <div class="input-group" style="width: 400px">
            <input type="text" class="form-control" name="content" id="content" value="" placeholder="输入后回车或提交">
            <input type="submit" class="btn btn-default" name="submit" id="submit" value="提交"/>
          </div>
      <% end %>
  <% end %>
</div>