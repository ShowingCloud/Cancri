<div class="main" id="main" data-src="<%= image_path('pagebk.jpg') %>">
  <div class="container" id="comp-list">
    <div class="top">
      比赛列表
    </div>
    <div class="middle">
      <% @competitions.each do |c| %>

          <div class="comp-item">
            <a href="<%= competition_path(c) %>">
              <div class="item-box">
                <%= image_tag(c.cover, class: 'cover') %>
                <div class="shade">
                  <p><%= c.name %></p>
                </div>
              </div>
            </a>
          </div>
      <% end %>
    </div>
    <nav>
      <%= paginate @competitions %>
    </nav>
    <div class="bottom">
    </div>
  </div>
</div>
