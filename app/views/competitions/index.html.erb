<div class="main" id="main" data-src="<%= image_path('pagebk.jpg') %>">
  <div class="container" id="comp-list">

    <div class="competition-top">
      <div class="pull-right">
        <a class="btn btn-robodou" id="user-info-btn">选手信息</a>
        <a class="btn btn-robodou" id="apply-flow-btn">报名流程</a>
      </div>
      <ul class="competition-steps clearfix">
        <li class="step-wrapper">
          <p class="step">step1</p>
          <p class="step-desc">更新选手信息</p>
        </li>
        <li class="step-wrapper">
          <p class="step">step2</p>
          <p class="step-desc">选择赛事项目</p>
        </li>
        <li class="step-wrapper">
          <p class="step">step3</p>
          <p class="step-desc">提交报名信息</p>
        </li>
        <li class="step-wrapper">
          <p class="step">step4</p>
          <p class="step-desc">等待审核</p>
        </li>
      </ul>
    </div>
    <div class="middle">
      <% @competitions.each do |c| %>
          <div class="comp-item">
            <a href="<%= competition_path(c) %>">
              <div class="item-box">
                <%= image_tag(c.cover, class: 'cover') %>
                <div class="shade">
                  <p><%= c.name %></p>
                  <div class="shade-btn">
                    <button class="btn-go-comp">查看详情</button>
                  </div>
                </div>
              </div>
            </a>
          </div>
      <% end %>
    </div>
    <nav>
      <%= paginate @competitions %>
    </nav>
    <div class="bottom">
    </div>
    <div class="main-overlay"></div>
  </div>
</div>
