<div id="main" class="main" data-src="<%= image_path('homepage/register-pagebk.png') %>">
  <div class="container">
    <div class="row">
      <div class="event" id="event">
        <div class="sec-t" data-src="<%= image_path('homepage/match-info-t-bk.png') %>">
          <%= @competition.name %>报名
        </div>
        <div class="sec-c">
          <!--选择项目-->
          <div class="event-panel">
            <div class="title">项目名称</div>
            <div class="event-select" data-src="<%= image_path('homepage/select-bk.png') %>">
              <select id="event-select" data-select-target="now-event">
                <option value="0">请选择项目</option>
                <% @events.each do |e| %>
                    <option class="event-option" data-max-num="<%= e.team_max_num %>" data-name="<%= e.name %>" data-val="<%= e.id %>" value="<%= e.id %>"><%= e.name %></option>
                <% end %>
              </select>
              <input id="now-event" type="hidden" name="now-event"/>
            </div>
          </div>

          <!--单人项目组-->
          <div class="single-event">

            <!--个人信息确认-->
            <div class="single-confirm apply-part">
              <form id="single-confirm-form">
                <div class="confirm-t" data-src="<%= image_path('homepage/info-t-bk.png') %>">
                  确认个人信息
                </div>
                <div class="confirm-c">
                  <div class="input-row">
                    <div class="input-t">
                      <i class="glyphicon glyphicon-user"></i>
                      姓&nbsp;&nbsp;&nbsp;&nbsp;名
                    </div>
                    <div class="input-c">
                      <input class="input-b" type="text" name="username" value="<%= current_user.username %>"/>
                    </div>
                  </div>
                  <div class="input-row">
                    <div class="input-t">
                      <i class="glyphicon glyphicon-tag"></i>
                      学籍号
                    </div>
                    <div class="input-c">
                      <input class="input-b" type="text" name="student_code" value=""/>
                    </div>
                  </div>
                  <div class="input-row">
                    <div class="input-t">
                      <i class="glyphicon glyphicon-tag"></i>
                      性&nbsp;&nbsp;&nbsp;&nbsp;别
                    </div>
                    <div class="input-c">
                      <label class="radio-b"><input type="radio" name="gender" value="1"/>男</label>
                      <label class="radio-b"><input type="radio" name="gender" value="2"/>女</label>
                    </div>
                  </div>
                  <div class="input-row">
                    <div class="input-t">
                      <i class="glyphicon glyphicon-globe"></i>
                      区&nbsp;&nbsp;&nbsp;&nbsp;县
                    </div>
                    <div class="input-c">
                      <select name="district" data-select-target="district">
                        <option value="0">选择区县</option>
                        <% District.all.each do |d| %>
                            <option value="<%= d.id %>"><%= d.name %></option>
                        <% end %>
                      </select>
                      <input type="hidden" name="district"/>
                    </div>
                  </div>
                  <div class="input-row">
                    <div class="input-t">
                      <i class="glyphicon glyphicon-tag"></i>
                      学&nbsp;&nbsp;&nbsp;&nbsp;校
                    </div>
                    <div class="input-c school-target">
                      <a class="open-school">
                        <i class="glyphicon glyphicon-plus"></i>
                        选择学校
                      </a>
                      <br/>
                      <a class="add-other-school">没有你的学校？点击添加</a>
                      <input type="hidden" class="true-school" name="school[1]" value=""/>
                      <input type="hidden" class="true-school" name="school[2]" value=""/>
                    </div>
                  </div>
                  <div class="input-row">
                    <div class="input-t">
                      <i class="glyphicon glyphicon-tag"></i>
                      年&nbsp;&nbsp;&nbsp;&nbsp;级
                    </div>
                    <div class="input-c">
                      <select data-select-target="grade">
                        <option value="0">请选择年级</option>
                        <option value="一">一</option>
                        <option value="二">二</option>
                        <option value="三">三</option>
                        <option value="四">四</option>
                        <option value="五">五</option>
                        <option value="六">六</option>
                        <option value="七">七</option>
                        <option value="八">八</option>
                        <option value="九">九</option>
                        <option value="高一">高一</option>
                        <option value="高二">高二</option>
                        <option value="高三">高三</option>
                      </select>
                      <input type="hidden" name="grade" value=""/>
                    </div>
                  </div>
                  <div class="input-row">
                    <div class="input-t">
                      <i class="glyphicon glyphicon-tag"></i>
                      班&nbsp;&nbsp;&nbsp;&nbsp;级
                    </div>
                    <div class="input-c">
                      <select data-select-target="class">
                        <option value="0">请选择班级</option>
                        <% for n in 1..100 %>
                            <option value="<%= n %>"><%= n %></option>
                        <% end %>
                      </select>
                      <input type="hidden" name="class" value=""/>
                    </div>
                  </div>
                </div>
                <div class="confirm-b">
                  <button type="submit" class="apply-submit">提交个人信息</button>
                </div>
              </form>
            </div>

            <!--参赛信息-->
            <div class="single-join apply-part">

            </div>

            <!--单人报名信息-->
            <div class="single-already-info apply-part">
              <div class="event-name" data-src="<%= image_path('homepage/info-t-bk.png') %>"></div>
              <span class="tips">您已报名参加该项目</span>

              <div class="single-info">
                <div class="info-row">
                  <div class="row-l">
                    <i class="glyphicon glyphicon-user"></i>
                    姓名
                  </div>
                  <div class="row-r" data-name="username"></div>
                </div>
                <div class="info-row">
                  <div class="row-l">
                    <i class="glyphicon glyphicon-adjust"></i>
                    性别
                  </div>
                  <div class="row-r" data-name="gender"></div>
                </div>
                <div class="info-row">
                  <div class="row-l">
                    <i class="glyphicon glyphicon-education"></i>
                    学校
                  </div>
                  <div class="row-r" data-name="school"></div>
                </div>
                <div class="info-row">
                  <div class="row-l">
                    <i class="glyphicon glyphicon-bookmark"></i>
                    年级
                  </div>
                  <div class="row-r" data-name="grade"></div>
                </div>
              </div>
              <div class="single-exit">
                <button class="btn-robodou btn-exit-event">退出比赛</button>
              </div>
            </div>

          </div>

          <!--团队项目组-->
          <div class="team-event">
            <div class="search-team apply-part">

            </div>
            <div class="team-confirm-join apply-part">

            </div>
            <div class="team-confirm-create apply-part">

            </div>
            <div class="create-team apply-part">

            </div>
            <div class="team-already-info apply-part">
              多人比赛报名
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>

<div id="school-list" class="modal fade">
  <div id="add-school">
    <div class="title" data-src="<%= image_path('homepage/info-t-bk.png') %>">
      选择学校
    </div>
    <span class="tips">筛选信息</span>

    <div class="dec">
      <div class="group-display">
        <select class="group">
          <option value="0">选择组别</option>
          <option value="1">小学</option>
          <option value="2">初中</option>
          <option value="3">高中</option>
          <option value="4">大学</option>
        </select>
      </div>
      <div class="district-display">
        <select class="district">
          <option value="0">选择区县</option>
          <% District.all.each do |d| %>
              <option value="<%= d.id %>"><%= d.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="school-list">
      <span class="tips">请选择学校</span>
      <ul class="items">

      </ul>
    </div>
    <div class="bottom">
      <button data-dismiss="modal" class="btn btn-default">取消</button>
    </div>
  </div>
</div>
<div id="add-other-school" class="modal fade">
  <div>

  </div>
</div>



