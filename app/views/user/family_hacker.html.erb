<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-3 hidden-xs">
      <%= render 'user/menu' %>
    </div>
    <div class="col-xs-12 col-sm-9">
      <h1 class="page-header">
        我的账户
      </h1>

      <%= render 'user/tab' %>
      <div class="panel panel-default">
        <div class="panel-body">
          <% if @has_already.status %>
              <div class="alert alert-info">您已经申请该角色,无需再次申请</div>
          <% else %>
              <%= simple_form_for(@family_hacker, html: {}, url: user_family_hacker_path, method: :post) do |f| %>
                  <%= f.input :desc %>
                  <div class="form-group teacher-part">
                    <label for="user_avatar">上传图片</label>
                    <%= f.file_field :cover %>
                    <%= f.hidden_field :cover_cache %>
                  </div>
                  <div class="form-actions">
                    <%= f.submit class: 'btn btn-primary', value: '提交', 'data-disable-with': '正在提交' %>
                  </div>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



