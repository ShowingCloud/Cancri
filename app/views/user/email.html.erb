<div id="main" class="main" data-src="<%= image_path('homepage/register-pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div id="user-center" class="user-center" data-src="<%= image_path('homepage/user-center-bk.png') %>">
        <div class="sec-t">
          <%= render 'user/menu' %>
        </div>
        <div class="sec-c">
          <div class="content">
            <div class="user-panel">
              <%= simple_form_for(current_user, html: {}, url: user_email_path, method: :post) do |f| %>
                  <div class="row">
                    <div class="col-xs-9">
                      <div class="input-group form-group email optional user_email">
                        <input id="user_email" class="email-value string email optional form-control" type="email" placeholder="请输入要添加的邮箱" name="user[email]" value="<%= current_user.email %>">
                        <span class="input-group-addon btn btn-default user-add-email" id="basic-addon2">发送验证码</span>
                      </div>
                      <div class="form-inputs">
                        <input id="email_code" class="string email required form-control" placeholder="请输入邮箱收到的验证码" type="text" name="[email_code]">
                      </div>
                      <br>

                      <div class="form-actions">
                        <%= f.submit class: 'btn btn-primary', value: '添加邮箱', 'data-disable-with' => '添加邮箱' %>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>
