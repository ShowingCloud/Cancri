<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-3 hidden-xs">
      <%= render 'user/menu' %>
    </div>
    <div class="col-xs-12 col-sm-9">
      <h1 class="page-header">
        我的账户
      </h1>

      <%= render 'user/tab' %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= simple_form_for(current_user, html: {id: 'form_add_mobile'}, url: user_add_mobile_path, method: :post) do |f| %>
              <div class="form-inputs">
                <%= f.input :mobile, placeholder: '请输入新的手机号' %>
                <div class="row">
                  <%= f.input :mobile_code, as: :tel, placeholder: '输入验证码', wrapper_html: {class: 'col-md-3'} %>
                  <div class="form-group tel required sing_up_mobile_code col-md-3">
                    <label class="control-label hidden-xs">
                      &nbsp;
                    </label>
                    <button type="button" data-key="add_mobile_new" data-type="ADD_MOBILE" id="btn_send_mobile_code" class="btn btn-default btn-block">获取验证码</button>
                  </div>
                </div>

              </div>
              <div class="form-actions">
                <%= f.submit class: 'btn btn-primary', value: '添加手机号' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>