<div id="main" class="main" data-src="<%= image_path('pagebk.jpg') %>" xmlns="http://www.w3.org/1999/html">
  <div class="container">
    <div class="row">
      <div class="user-center">
        <div class="main-title">
          个人中心
        </div>
        <%= render 'user/menu' %>
        <div class="user-main">
          <%= render 'user/tab' %>
          <div class="sub-content">
            角色为社会时检测：
            <sapn id="user-mobile"><%= @hacker[:mobile] %></sapn>
            <% hacker = @hacker[:hacker] %>
            <% hacker_profile = @hacker[:profile] %>
            <% hacker_family = @hacker[:family] %>
            <% if @hacker[:role_type].present? && @hacker[:not_update] && params[:update]!='true' %>
                <%= @hacker[:status] == 0 ? '待审核' : "您已被认证为#{@hacker[:role_type] == 1 ? '中小学生' : '社会'}创客" %>
                <br><br>
                <div style="border:1px solid white;border-radius: 15px;padding:15px;color:darkgoldenrod">
                  基本信息
                  <br><label>姓名：</label><%= hacker_profile[:username] %>
                  <br><label>性别：</label><%= show_gender(hacker_profile[:gender]) %>
                  <br><label>学校：</label><%= hacker_profile[:school_name] %>
                  <br><label>生日：</label><%= hacker_profile[:birthday] %>
                  <% if @hacker[:role_type] == 2 %>
                      <br><label>单位地址：</label><%= hacker_profile[:address] %>
                      <br><label>身份证：</label><%= hacker_profile[:identity_card] %>
                      <br><label>职称：</label><%= hacker_profile[:position] %>
                  <% end %>
                </div>
                <br>
                <div style="border:1px solid white;border-radius: 15px;padding:15px;color:darkgoldenrod">
                  家庭信息
                  <br><label>父亲姓名：</label><%= hacker_family[:father_name] %>
                  <br><label>母亲姓名：</label><%= hacker_family[:mother_name] %>
                  <br><label>家庭住址：</label><%= hacker_family[:address] %>
                  <br><label>家长微信：</label><%= hacker_family[:wx] %>
                  <br><label>家长QQ：</label><%= hacker_family[:qq] %>
                  <br><label>家长E-mail：</label><%= hacker_family[:email] %>
                </div>
                <br>
                <div style="border:1px solid white;border-radius: 15px;padding:15px;color:darkgoldenrod">
                  创建情况
                  <br><label>创建时间：</label><%= hacker[:create_date] %>
                  <br><label>面积：</label><%= hacker[:square] %>平方
                  <br><label>形式：</label><%= t('user_hacker.situation'+hacker[:situation].to_s) %>
                  <br><label>参与：</label><%= t('user_hacker.partake'+hacker[:partake].to_s) %>
                  <br><label>每周活动时间：</label><%= hacker[:active_weekly] %>
                  <br><label>爱好：</label><%= hacker[:family_hobbies] %>
                  <br><label>推荐：</label><%= t('user_hacker.create_way'+hacker[:create_way].to_s) %>
                  <% if hacker[:create_way]!=1 %>
                      <br>推荐组织：<%= hacker[:create_with] %>
                  <% end %>
                </div>
                <br>
                <% if @hacker[:status] == 1 %>
                    <a class="btn btn-primary" href="/user/hacker_apply?update=true">修改</a>
                <% end %>
            <% else %>
                <%= simple_form_for(current_user, html: {}, url: user_hacker_apply_post_path, method: :post) do |f| %>
                    <label><input name="hacker_type" type="radio" <%= 'checked' if @hacker[:role_type].to_i == 1 %> value="1"/>
                      中小学生</label>&nbsp;
                    <label><input name="hacker_type" type="radio" <%= 'checked' if @hacker[:role_type].to_i == 2 %>  value="2"/>
                      社会</label>
                    <br>
                    <br>
                    <div style="border:1px solid white;border-radius: 15px;padding:15px;color:darkgoldenrod">
                      基本信息：
                      <br><label>姓名：</label><input name="user_profile[username]" value="<%= hacker_profile[:username] %>"/>
                      <br><label>性别：</label><input name="user_profile[gender]" value="<%= hacker_profile[:gender] %>"/>
                      <br><label>生日：</label><input name="user_profile[birthday]" value="<%= hacker_profile[:birthday] %>"/>
                      <br><label>学校：</label><input value="<%= current_user.user_profile.school.try(:name) %>"><input type="" name="user_profile[school_id]" value="<%= hacker_profile[:school_id] %>"/>
                    </div>
                    <br>
                    <div style="border:1px solid white;border-radius: 15px;padding:15px;color:darkgoldenrod">
                      家庭信息：
                      <br><label>父亲姓名：</label><input name="user_family[father_name]" value="<%= hacker_family[:father_name] %>"/>
                      <br><label>母亲姓名：</label><input name="user_family[mother_name]" value="<%= hacker_family[:mother_name] %>"/>
                      <br><label>家庭住址：</label><input name="user_family[address]" value="<%= hacker_family[:address] %>"/>
                      <br><label>家长微信：</label><input name="user_family[wx]" value="<%= hacker_family[:wx] %>"/>
                      <br><label>家长QQ：</label><input name="user_family[qq]" value="<%= hacker_family[:qq] %>"/>
                      <br><label>家长E-mail：</label><input name="user_family[email]" value="<%= hacker_family[:email] %>"/>
                    </div>
                    <br>

                    <div style="border:1px solid white;border-radius: 15px;padding:15px;color:darkgoldenrod">
                      创建情况：
                      <br><label>创建时间：</label><input name="hacker[create_date]" value="<%= hacker[:create_date] %>"/>
                      <br><label>面积：</label><input name="hacker[square]" value="<%= hacker[:square] %>"/>
                      <br><label>形式：</label><select name="hacker[situation]">
                      <option value="1" <%= 'checked' if hacker[:situation] == '1' %>>专用工作台</option>
                      <option value="2" <%= 'checked' if hacker[:situation] == '2' %>>专用工作间</option>
                    </select>
                      <br><label>参与：</label><select name="hacker[partake]">
                      <option value="1">以孩子为主</option>
                      <option value="2">以家长为主</option>
                      <option value="3">以亲子为主</option>
                    </select>
                      <br><label>每周活动时间：</label><input name="hacker[active_weekly]" value="<%= hacker[:active_weekly] %>"/>
                      <br><label>爱好：</label><input name="hacker[family_hobbies]" value="<%= hacker[:family_hobbies] %>"/>
                      <br><label>推荐：</label><select name="hacker[create_way]">
                      <option value="1">自建</option>
                      <option value="2">联合体</option>
                      <option value="3">学校</option>
                      <option value="4">个人</option>
                    </select>
                      <br><label>推荐组织：</label><input name="hacker[create_with]" value="<%= hacker[:create_with] %>"/>
                    </div>
                    <br>
                    <div class="form-actions">
                      <%= f.submit class: 'btn btn-primary', value: '提交', 'data-disable-with' => '正在提交' %>
                      <% if params[:update] == 'true' %>
                          <a class="btn btn-danger" href="/user/hacker_apply">取消修改</a>
                      <% end %>
                    </div>
                <% end %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
