<div id="main" class="main" data-src="<%= image_path('homepage/register-pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div id="user-center" class="user-center" data-src="<%= image_path('homepage/user-center-bk.png') %>">
        <div class="sec-t">
          <%= render 'user/menu' %>
        </div>
        <div class="sec-c">
          <div class="content">
            <%= simple_form_for(@point, url: user_add_point_path, method: :post) do |f| %>
                <div class="point-add">
                  <div class="s-t" data-src="<%= image_path('homepage/point-add.png') %>">
                    增 加<br/>
                    积 分
                  </div>
                  <div class="s-c">
                    <div class="add-form" data-src="<%= image_path('homepage/add-bk.png') %>">
                      <div class="input-row">
                        <span>比赛名称</span>
                        <input id="prize-id" class="string required form-control" type="text" name="user_point[prize_id]">
                      </div>
                      <div class="input-row">
                        <label for="exampleInputFile">奖状</label>
                        <%= f.file_field :cover %>
                      </div>
                      <div class="input-row">
                        <%= f.hidden_field :cover_cache %>
                        <p class="help-block">格式：jpg jpeg gif png</p>
                      </div>
                      <div class="input-row">
                        <%= f.submit class: 'btn btn-primary', value: '提交', 'data-disable-with' => '提交' %>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>
