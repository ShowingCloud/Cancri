<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-3 hidden-xs">
      <%= render 'user/menu' %>
    </div>
    <div class="col-xs-12 col-sm-9">
      <h1 class="page-header">
        我的账户
      </h1>

      <%= render 'user/tab' %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= simple_form_for(@current_user, html: {id: 'form_change_password'}, url: user_password_path, method: :post) do |f| %>
              <div class="form-inputs">
                <%= f.input :old_password, placeholder: '请输入您当前的密码' %>
                <%= f.input :new_password, placeholder: '请输入您的新密码', hint: '最少6位' %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, class: 'btn btn-primary', value: '修改密码' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>