var vote = $(".vote>span");
var icon = $(".btn-like[data-id='<%= @creative_activity.id %>']").find("i");
<% if @is_present %>
icon.next('span').text('取消赞');
vote.text(parseInt(vote.text()) + 1);
<% else %>
<% if @creative_activity.likes.count(:user_id)>0 %>
icon.next('span').text('赞');
vote.text(parseInt(vote.text()) - 1);
<% else %>
icon.next('span').text('赞');
vote.text(parseInt(vote.text()) - 1);
<% end %>
<% end %>
