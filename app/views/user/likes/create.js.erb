var icon = $(".btn-like[data-id='<%= @creative_activity.id %>']").find("i");
<% if @is_present %>
icon.addClass("text-danger");
icon.next('span').text('取消赞(' + <%= @creative_activity.likes.count(:user_id) %>+')');
<% else %>
icon.removeClass("text-danger");
<% if @creative_activity.likes.count(:user_id)>0 %>
icon.next('span').text('赞(' + <%= @creative_activity.likes.count(:user_id)  %>+')');
<% else %>
icon.next('span').text('赞');
<% end %>
<% end %>
