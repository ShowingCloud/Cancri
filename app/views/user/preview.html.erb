<div id="main" class="main" data-src="<%= image_path('homepage/register-pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div id="user-center" class="user-center" data-src="<%= image_path('homepage/user-center-bk.png') %>">
        <div class="sec-t">
          <%= render 'user/menu' %>
        </div>
        <div class="sec-c">
          <div class="content">
            <div class="user-panel">
              <div class="user-row">
                <span class="row-name">邮箱</span>
                <% if @user_info.email.present? %>
                    <span class="row-content edit-input" data-input="text"><%= @user_info.email %></span>
                    <span class="row-tip pull-right"><a href="<%= user_reset_email_path %>">修改</a></span>
                <% else %>
                    <span class="row-tip pull-right"><a href="<%= user_email_path %>">添加</a></span>
                <% end %>
              </div>
              <hr>
              <div class="user-row">
                <span class="row-name">手机</span>
                <% if @user_info.mobile.present? %>
                    <span class="row-content edit-input" data-input="text"><%= @user_info.mobile %></span>
                    <span class="row-tip pull-right"><a href="<%= user_reset_mobile_path %>">修改</a></span>
                <% else %>
                    <span class="row-tip pull-right"><a href="<%= user_mobile_path %>">添加</a></span>
                <% end %>
              </div>
              <hr>
              <div class="user-row">
                <span class="row-name">登录密码</span>
                <span class="row-content edit-input" data-input="text">建议您定期更改密码</span>
                <span class="row-tip pull-right"><a href="<%= user_passwd_path %>">修改</a></span>
              </div>
            </div>
            <div class="user-panel">
              <div class="user-row">
                <span class="row-name">姓名</span>
                <%= @user_info.name %>
              </div>
              <div class="user-row">
                <span class="row-name">身份</span>
                <%= @user_info.role %>
              </div>
              <div class="user-row">
                <span class="row-name">性别</span>
                <% if @user_info.xb == 1 %>
                    男
                <% elsif @user_info.xb == 2 %>
                    女
                <% end %>
              </div>
              <div class="user-row">
                <span class="row-name">学校</span>
                <span class="row-content edit-input" data-input="text">
                  <%= @user_info.school %>
                </span>
              </div>
              <div class="user-row">
                <span class="row-name">班级</span>
                <span class="row-content edit-input" data-input="text">
                  <% if @user_info.grade.present? && @user_info.bj.present? %>
                  <%= @user_info.try(:grade) %>年级<%= @user_info.try(:bj) %>班
                  <% end %>
                </span>
              </div>
              <div class="user-row">
                <span class="row-name">地址</span>
                <span class="row-content edit-input" data-input="text">
                  <%= @user_info.address %>
                </span>
              </div>
              <div class="panel-control control-top">
                <a href="<%= user_profile_path %>">编 辑</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>




