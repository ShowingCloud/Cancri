<div id="main" class="main" data-src="<%= image_path('pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div class="user-center">
        <div class="main-title">
          个人中心
        </div>
        <%= render 'user/menu' %>
        <% if @consults.present? %>
            <% @consults.each do |c| %>
                <div class="<%= c.admin_reply ? 'left' : 'right' %>">
                  <span class="time"><%= c.created_at.try(:strftime, '%Y-%m-%d') %></span>
                  <br/>
                  <div class="talk"><%= c.content %></div>
                </div>
            <% end %>
        <% else %>
            您还没有调戏过哦
        <% end %>
        <hr>
        <div class="col-sm-6">
          <%= simple_form_for(@consult, html: {}, url: user_consult_path, method: :post) do |f| %>
              <%= f.input :content %>
              <div class="form-actions">
                <%= f.submit class: 'btn btn-primary', value: '提交', 'data-disable-with' => '提交' %>
              </div>
          <% end %>
        </div>

      </div>

    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>


