<div class="container">
  <% if @news_array.present? %>
      <% @news_array.each do |news| %>
          <%= link_to "/news/#{news[:id]}", title: '查看新闻' do %>
              <%= news[:type] %>
              <%= news[:desc] %>
              <%= image_tag(news[:cover]) %>
              <%= news[:created_at].try(:strftime, '%Y-%m-%d') %>
              <%= news[:name] %>
          <% end %>
          <br>
      <% end %>
  <% else %>
      <p>暂无新闻</p>
  <% end %>
  <%= paginate @news %>
</div>


