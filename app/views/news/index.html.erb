<div id="main" class="main" data-src="<%= image_path('homepage/bk.png') %>">
  <div class="container">
  <div id="news">
      <div class="row">
        <% if @news.present?%>
        <% @news.each do |news| %>
            <%= link_to news_path(news), title: '查看新闻' do %>
                <div class="col-sm-6 col-xs-12">
                  <div class="news-item" data-src="<%= image_path('homepage/news-item-bk.png') %>">
                    <div class="news-img">
                      <img src="" alt="" data-src="<%= image_path('homepage/news-image01.png') %>"/>
                    </div>
                    <div class="news-simple">
                      <div class="news-tags">
                        <ul class="items">
                          <li class="item"><a href="">赛事</a></li>
                          <li class="item"><a href="">报名</a></li>
                        </ul>
                        <div class="news-time">
                          <%= news.created_at.try(:strftime, '%Y-%m-%d') %>
                        </div>
                      </div>

                      <div class="sec-t">
                        <%= news.name %>
                      </div>
                      <div class="sec-c">
                        <%= news.content %>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
        <% end %>
            <% else %>
        <h2 style="color: #FFF;text-align: center">暂时没有新闻</h2>
            <% end %>
        <%= paginate @news %>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>

